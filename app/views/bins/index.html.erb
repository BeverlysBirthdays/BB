<div class = "row valign-wrapper">
  <h4 class="col s8 valign">Bins Listing</h4>
  <%= link_to "Add New Bin", new_bin_path, class: "waves-effect waves-light btn col s4 valign green white-text" %>
</div>

<% if @bins.empty? %>
    No bins created yet.
<% else %>
  <table class = "hoverable">
    <thead>
      <tr>
        <th>Date</th>
        <!-- <th>Agent</th> -->
<!--         <th>Item</th>
        <th>Quantity</th> -->
      </tr>
    </thead>
    <tbody>
      <% @bins.each do |bin| %>
        <tr>
          <td><%= link_to bin.checkout_date.strftime('%m/%d/%y'), bin_path(bin) %></td>
  <!--         <td><%# link_to bin.agent.name, agent_path(bin.agent) %></td> -->
          <td><%= link_to '<i class="mdi-navigation-close"></i>'.html_safe, bin_path(bin), method: 'delete', class: "waves-effect waves-light btn-floating deep-orange darken-4 tooltipped", data: {confirm: "Are you sure you want to delete this order", position: 'right', tooltip: 'Delete Order'}%></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<!-- Add the pagination using will_paginate gem -->
<span class="paginate">
  <%= will_paginate @all_orders, :previous_label => "Previous&nbsp;", :next_label => "&nbsp;Next" %>
</span>


