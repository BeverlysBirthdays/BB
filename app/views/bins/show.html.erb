<h5>Bin Details</h5>

<p>
  <strong>Agency:</strong>
  <%= @bin.agency.name %>
</p> 
<p>
	<strong>Program:</strong>
	<%= @bin.program.name %>
</p>
<p>
	<strong>Checkout Date:</strong>
	<%= @bin.checkout_date %>
</p>


<div class = "row">
	<!--Current Basket details -->
	<div class = "col s5">
		<strong class = "teal-text">Items Checked Out: </strong>
		<table class = "hoverable">
			<thead>
				<th>Name</th>
				<th>Quantity</th>
			</thead>
			<% @items.keys.each do |i| %>
				<tr>
					<% item = Item.find(i)%>
					<td><%=link_to item.name, item_path(item)%></td>
					<td><%=@items[i]%></td>
				</tr>	
			<%end%>
		</table>
	</div>
</div>

<%= link_to "Back to Bin Listings", bins_path, class: "waves-effect waves-light btn valign purple lighten-5 light-blue-text text-darken-4" %>

