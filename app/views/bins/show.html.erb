<p></p>
<!-- Nav -->
<%= link_to "Back to Bin Listings", bins_path, class: "waves-effect waves-light btn valign purple lighten-5 light-blue-text text-darken-4" %>

<!-- Bin Details -->
<h5>Bin Details</h5>

<!-- Bin Info -->
<div class='row'>
	<div class='col s4'>
		<strong>Agency:</strong>
		<%= @bin.agency.name %>
	</div>
	<div class='col s4'>
		<strong>Program:</strong>
		<%= @bin.program.name %>
	</div>
</div>

<!-- Date + Bin Value -->
<div class='row'>
	<div class='col s4'>
		<strong>Checkout Date:</strong>
		<%= @bin.checkout_date %>
	</div>
	<div class='col s4'>
		<strong>Number of Bins:</strong>
		<%= @bin.num_of_bins %>
	</div>
	<div class='col s4'>
		<strong>Approx Value of Bin:</strong>
		<%= @bin.get_total_value_of_bin %>
	</div>
</div>

<div class = "row">
	<!--Current Basket details -->
	<div class = "col s5">
		<strong class = "teal-text">Items Checked Out: </strong>
		<table class = "hoverable">
			<thead>
				<th>Name</th>
				<th>Quantity</th>
			</thead>
			<% @items.keys.each do |i| %>
				<tr>
					<% item = Item.find(i)%>
					<td><%=link_to item.name, item_path(item)%></td>
					<td><%=@items[i]%></td>
				</tr>	
			<%end%>
		</table>
	</div>
</div>


