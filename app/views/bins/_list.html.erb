<div id='bin_results'>

  <% if @bins.empty? %>
      No bins created yet.
  <% else %>
    <table class = "hoverable">
      <thead>
        <tr>
          <th>Date</th>
          <th>Agency</th>
          <th>Number of Bins</th>
  <!--         <th>Item</th>
          <th>Quantity</th> -->
        </tr>
      </thead>
      <tbody>
        <% @bins.each do |bin| %>
          <tr>
            <td><%= link_to bin.checkout_date.strftime('%m/%d/%y'), bin_path(bin) %></td>
            <td><%= link_to bin.agency.name, agency_path(bin.agency) %></td>
            <td><%= link_to bin.program.name, program_path(bin.program) %></td>
            <td><%= bin.num_of_bins %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>

  <!-- Add the pagination using Kaminari gem -->
  <span class="paginate">
    <%= paginate @bins %>
  </span>

</div>


