<%= form_for_filterrific @filterrific, :html => {class: 'small-filter-box'} do |f| %>
	<div>
	    <%# give the search field the 'filterrific-periodically-observed' class for live updates %>
	    <%= f.select(:search_by_agency, @filterrific.select_options[:search_by_agency], { include_blank: 'Agency' }, class: 'filterrific-periodically-observed') %>	
	</div>
	<div>
	    <%= f.text_field(:search_by_date_gte, class: 'datepicker filterrific-periodically-observed', :placeholder=>'From Date') %>
	</div>
	<div>
		<%= f.text_field(:search_by_date_lte, class: 'datepicker filterrific-periodically-observed', :placeholder=>'To Date') %>
	</div>
	<div>
	    <%= f.select(:search_by_program, @filterrific.select_options[:search_by_program], { include_blank: 'Program' }, class: 'filterrific-periodically-observed') %>	
	</div>
	<div>
		<%= link_to 'Reset filters',reset_filterrific_url, class: 'waves-effect waves-light btn col s12 green white-text' %>
	</div>

	<%# add an automated spinner to your form when the list is refreshed %>
	<%= render_filterrific_spinner %>
<% end %>
