<!DOCTYPE html>
<html>
<head>
  <title>Beverly's Birthdays Inventory Management System</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">          

  <!-- google hosted jquery libraries -->
  <!-- <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.2/jquery.min.js"></script>
  <link rel="stylesheet" href="https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.4/themes/smoothness/jquery-ui.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.4/jquery-ui.min.js"></script> -->
  <!-- <script src="http://code.jquery.com/jquery-1.10.2.js"></script>  -->
  <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script> 
  <script src="http://code.jquery.com/ui/1.10.4/jquery-ui.js"></script>
</head>

<body>

    <header>
      <!-- Top bar NAVIGATION -->
      <div>
        <%= render 'partials/top_nav' %>
      </div>
    </header>

    <main> 
      <!-- CONTENT -->
      <div class= "container">

        <!--flash alert box for form -->
        <% flash.each do |name, msg| %>
        <div class="alert-box <%= name == :notice ? "success" : "warning" %> radius">
          <a href="#" class="close">&times;</a>
          <%= msg %>
        </div>
        <% end %>

        <div class="row">

          <!-- side bar navigation -->
   <!--        <div class = "col s3 card">
            <%# render 'partials/quick_links' %>
          </div> -->

          <!--Main content-->
          <div class="col s12">
            <%# flash.each do |name, msg| %>
            <%# content_tag :div, msg, :id => "flash_#{name}" %>
            <%# end %>
            <%= yield %>
            <%= javascript_include_tag "application" %>
          </div>

        </div>  
      </div>
    </main>

    <!-- FOOTER -->
    <footer class="page-footer light-blue lighten-1">
      <div class='col s12' id='footer'>
        <%= render 'partials/footer' %>
      </div>
    </footer>

<%# yield %>

</body>

</html>
