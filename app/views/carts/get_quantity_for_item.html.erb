<p></p>

<div class='row'>
	<h5 class="col s3"> Add to Basket <i class = "mdi-action-shopping-cart"></i></h5>
</div>

<%= form_tag() do %>
	
	<!-- Item general info -->
	<div class = "row">
		<!-- Name-->
		<div class="col s3">
		    <strong>Name:</strong>
		    <%= @item.name %>
		</div>
		<!-- Barcode -->
		<div class="col s3">
		    <strong>Barcode:</strong>
		    <%= @item.barcode %>
		</div>
		<!-- Category -->
		<div class="col s3">
		    <strong>Category:</strong>
		    <%= @item.category.name %>
		</div> 

	</div>

	<!-- Quantity -->
	<div class='row'>
		<div class='col s6'>
			<%= label_tag("Quantity to be checked out: ") %>
	  		<%= number_field_tag :qty, '', :value => 1 %>
		</div>
	</div>
	<!-- Submit -->
	<div class='row'>
		<%= button_tag "Add to Basket", class: "waves-effect waves-light btn orange white-text col s4" %>
		<%= link_to "Back to Item Listings", items_path, class: "waves-effect waves-light btn col s4 offset-s1 valign green" %>
	</div>
<% end %>