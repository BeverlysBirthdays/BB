<div class="row"></div>
<div class = "row valign-wrapper">
	<h4 class="col s4">Basket <i class = "mdi-action-shopping-cart"></i></h4>
	<% if ! @bin_items_in_cart.empty? %>
	<%= link_to "Clear Basket", clear_cart_path, class: "waves-effect waves-light btn col s3 offset-s1 red valign" %>
	<%= link_to "Checkout", new_bin_path, class: "waves-effect waves-light btn col s3 offset-s1 orange valign" %>
	<% end %>
</div>

<% if @bin_items_in_cart.empty? %>
	There are no items in basket at this time
<%else%>
	<table>
		<thead>
			<th>Item Name</th>
			<th>Category</th>
			<th>Quantity</th>
		</thead>
		<% @bin_items_in_cart.each do |bi| %>
		<tr>
			<td><%= link_to bi.item.name, item_path(bi.item) %></td>
			<td><%= bi.item.category.name %></td>
			<td><%= bi.quantity %></td>
			<td><%= link_to '<i class="material-icons">remove</i>'.html_safe, add_to_cart_path(bi.item.id), class: "waves-effect waves-light btn-floating deep-orange lighten-3 tooltipped", data: {position: 'right', tooltip: 'Change Quantity in Basket'}%></td>
			<td><%= link_to '<i class="mdi-navigation-close"></i>'.html_safe, remove_item_path(bi.item.id), class: "waves-effect waves-light btn-floating deep-orange darken-4 tooltipped", data: {position: 'right', tooltip: 'Remove from Basket'}%></td>
		</tr>
		<% end %>
	</table>
<% end %>
<br>
<%= link_to "Back to Item Listings", items_path, class: "waves-effect waves-light btn valign green white-text" %>
