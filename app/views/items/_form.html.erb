<%= form_for(@item) do |f| %>
  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% @item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :barcode %><br>
    <%= f.text_field :barcode %>
  </div>

  <div class="field">
    <% if controller.action_name.capitalize == 'Update'%>
      <%= f.label :quantity, 'Increase quantity by' %><br>
    <% else %>
      <%= f.label :quantity, 'Increase quantity by' %><br>
    <% end %>
    <%= f.number_field :quantity, :value => 1%>
  </div>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :gender %><br>
    <%# f.number_field :gender %>
    <%= f.select(:gender, get_gender_list) %>
  </div>
  <div class="field">
    <%= f.label :age %><br>
    <%# f.number_field :age %>
    <%= f.select(:age, get_age_list)%>
  </div>

  <div class="field">
    <%# f.label :donated %><br>
    <%= f.check_box :donated %>
    <%= f.label :donated, 'Donation' %>
    <%# f.radio_button :donated, 0 %>
    <%# f.label :donated, 'Donation'%>
    <%# f.radio_button :donated, 1 %>
    <%# f.label :donated, 'Bought' %>
  </div>

  <div class="field">
    <%= f.label :notes %><br>
    <%= f.text_area :notes %>
  </div>
  <div class="field">
    <%= f.label :category_id %><br>
    <%# f.number_field :category_id %>
    <%= f.collection_select :category_id, Category.alphabetical, :id, :name %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
