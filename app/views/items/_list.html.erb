<div id='filterrific_results'>
	<!-- Collection View -->
	<ul class="collection">
		<% if @items.empty? %>
		 There are no items in inventory.
		<% else %>
		<% @items.each do |item| %>
			<li class='collection-item avatar'>
				<!-- Tooltip on Icon: category name -->
				<%= tt = item.category.name%>
				<%= content_tag('i', item.category.icon, class: 'material-icons circle green tooltipped', data: {position: 'left', tooltip: tt}) %>
				<span class="title"> <%= link_to item.name, item_path(item) %></span>
				<p>
					<!-- First Line -->
					<strong>Age: </strong>
					<% for a in item.age %>
						<%= @age_list.key(a)%> | 
	      			<% end %>
	      			&nbsp;&nbsp;
					<!-- First line -->
					<strong>Gender: </strong><%= @gender_list.key(item.gender) %>
					<br>
					<!-- Second Line -->
					<strong>Notes: </strong>
					<% if item.notes == ""%> 
						- 
					<% else %> 
						<%= item.notes %>
					<% end %>
				</p>	
				<div class="secondary-content">	
					<!-- Quantity -->
					<text class='tooltipped', data-position='left', data-tooltip='Total Quantity in Inventory'><%= item.total_quantity_remaining %></text>
			        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
			        
					<!-- Add to Basket -->
					<%= link_to '<i class="material-icons">shopping_basket</i>'.html_safe, add_to_cart_path(item.id),class: "waves-effect waves-light btn-floating deep-orange lighten-3 tooltipped", data: {position: 'right', tooltip: 'Add to Basket'} %> 
				</div>
			</li>
		<% end %>
		<% end %>
	</ul>

	<span>
		<%= paginate @items %>
	</span>

</div>