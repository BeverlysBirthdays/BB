<!-- Nav buttons -->
<div class = "row valign-wrapper">
  <h4 class="valign col s5">Items Listing</h4>
  <%= link_to "Add New Item", new_item_path, class: "waves-effect waves-light btn col s3 valign pink white-text" %>
  <%= link_to "Show Bin", show_cart_path, class: "waves-effect waves-light btn col s3 offset-s1 valign orange white-text" %>
</div>

<!-- Collection View -->
<ul class="collection">
	<% @items.each do |item| %>
		<li class='collection-item avatar'>
			<i class='material-icons circle green'> <%=item.category.icon %></i>
			<span class="title"> <%= item.name.capitalize %></span>
			<p>
				<!-- First Line -->
				Age:
				<% for a in item.age %>
					<%= @age_list.key(a)%> | 
      			<% end %>
				<br>
				<!-- Second line -->
				Gender: <%= @gender_list.key(item.gender) %>
				<br>
				<!-- Third Line -->
				Notes: 
				<% if item.notes == ""%> 
					- 
				<% else %> 
					<%= item.notes %>
				<% end %>
			</p>	
			<%= link_to '<i class="mdi-action-add-shopping-cart"></i>'.html_safe, add_to_cart_path(item.id),class: "waves-effect waves-light btn-floating modal-trigger deep-orange lighten-3 tooltipped secondary-content", data: {position: 'right', tooltip: 'Add to Bin'} %> 
		</li>
	<% end %>
</ul>
