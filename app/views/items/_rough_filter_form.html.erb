<!-- Item filterform partial-->
<%= form_for_filterrific @filterrific do |f| %>
  <div class="col s12 m3">
    <div class="input-field white-text">
      <i class="material-icons prefix">search</i>
      <%# f.text_field(:by_search, placeholder: 'Search', class:'filterrific-periodically-observed') %>
      <%= f.text_field(:search_by_name, class: 'filterrific-periodically-observed', :placeholder=>'Search Name') %>

    </div>
  </div>
  <div class="col s12 m3">
    <div class="input-field">
      <i class="material-icons prefix">view_week</i>
      <%# f.text_field(:by_barcode, placeholder: 'Barcode', class:'filterrific-periodically-observed') %>
      <%= f.text_field(:search_by_barcode, class: 'filterrific-periodically-observed', :placeholder=>'Barcode') %>
    </div>
  </div>
  <div class="col s12 m2">
    <div class="input-field">
      <%# f.select(:for_category, @filterrific.select_options[:for_category], { include_blank: 'Category' }) %>
      <%= f.select(:by_category, @filterrific.select_options[:by_category], { include_blank: 'Category' }) %> 
    </div>
  </div>
  <div class="col s12 m2">
    <div class="input-field">
      <%# f.select(:by_age, @filterrific.select_options[:by_age], { include_blank: 'Age' }) %>
      <%= f.select(:by_age_category, @filterrific.select_options[:by_age_category], { include_blank: 'Age' }) %>
    </div>
  </div>
<% end %>
